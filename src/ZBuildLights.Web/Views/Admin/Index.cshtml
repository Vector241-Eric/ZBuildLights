@using BuildLightControl
@using ZBuildLights.Web.Extensions
@model dynamic

@{
    ViewBag.Title = "ZBuildLights Admin";
}

<h2>Admin</h2>
<p class="lead">Modify existing projects or add new lights</p>

<div class="panel-group" id="projects-panel" role="tablist" aria-multiselectable="true">
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="panel-heading-core">
            <h4>
                <a data-toggle="collapse"
                   data-parent="projects-panel"
                   href="#collapse-core"
                   aria-expanded="true"
                   aria-controls="collapse-core"
                   class="collapsed">
                    Core
                </a>
            </h4>
        </div>
        <div id="collapse-core" class="panel-collapse collapse" role="tabpanel" aria-labelledby="panel-heading-core">
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                        <tr><td colspan="3" class="text-center lead">Snp Square</td></tr>
                        <tr>
                            <th>Color</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="@LightColor.Green.DisplayClass()">Green</td>
                            <td><a href="javascript:void(0)">Toggle Status (On)</a></td>
                            <td><a href="javascript:void(0)">Edit</a></td>
                        </tr>
                        <tr>
                            <td class="@LightColor.Yellow.DisplayClass()">Yellow</td>
                            <td><a href="javascript:void(0)">Toggle Status (On)</a></td>
                            <td><a href="javascript:void(0)">Edit</a></td>
                        </tr>
                        <tr>
                            <td class="@LightColor.Red.DisplayClass()">Red</td>
                            <td><a href="javascript:void(0)">Toggle Status (On)</a></td>
                            <td><a href="javascript:void(0)">Edit</a></td>
                        </tr>
                    </tbody>
                </table>
                <table class="table table-hover">
                    <thead>
                        <tr><td colspan="3" class="text-center lead">Snp Near Matt</td></tr>
                        <tr>
                            <th>Color</th>
