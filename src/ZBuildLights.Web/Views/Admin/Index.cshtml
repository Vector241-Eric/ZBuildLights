@using ZBuildLights.Web.Extensions
@model ZBuildLights.Web.Models.Admin.AdminViewModel

@{
    ViewBag.Title = "ZBuildLights Admin";
    var projects = Model.Projects;
    var unassigned = Model.Unassigned;
}

@section scripts {
    <script>
        var urls = {
            addProject: '@Url.Action("AddProject")',
            deleteProject: '@Url.Action("DeleteProject")',
            updateProject: '@Url.Action("UpdateProject")',
            addGroup: '@Url.Action("AddGroup")',
            updateGroup: '@Url.Action("UpdateGroup")',
            deleteGroup: '@Url.Action("DeleteGroup")',
        };

        $(function() {
            //Expand / Collapse
            $('.collapse').on('show.bs.collapse', function() {
                var headingId = $(this).attr('data-panelheading');
                $('#' + headingId + ' .heading-icon').removeClass('fa-plus-circle').addClass('fa-minus-circle');
            });
            $('.collapse').on('hide.bs.collapse', function() {
                var headingId = $(this).attr('data-panelheading');
                $('#' + headingId + ' .heading-icon').removeClass('fa-minus-circle').addClass('fa-plus-circle');
            });

            function showAlert(message) {
                var template = $(document.getElementById('alert-template').innerHTML);
                template.find('[data-purpose="error-message"]').text(message);
                $('#alert-container').append(template);
            }

            function closeAlerts() {
                $('#alert-container').find('[data-purpose="error-alert"]').remove();
            }

            function handleError(data) {
                if (data.status == 500) {
                    console.log(data.statusText);
                    showAlert('Failed to add project. Please try again later.');
                    return;
                }
                showAlert(data.responseJSON.Message);
            }

            //New Project Modal
            $('#save-new-project').click(function() {
                closeAlerts();
                var spinner = $('#add-project-modal .wait-spinner');
                spinner.show();
                var input = $('#project-name-input').val();
                $.post(urls.addProject, { projectName: input })
                    .always(function() {
                        $('#add-project-modal').modal('hide');
                        spinner.hide();
                    })
                    .success(function() {
                        location.reload();
                    })
                    .fail(handleError);
            });

            //Edit Project
            $('.btn-edit-project').click(function() {
                var projectId = $(this).attr('data-projectId');
                var projectPanel = $('.admin-project-panel[data-projectId="' + projectId + '"]');
                var projectName = projectPanel.attr('data-projectName');

                $('#edit-project-id').val(projectId);
                $('#edit-project-name-input').val(projectName);
                $('#edit-project-modal .delete-confirm').hide();
                $('#edit-project-modal .wait-spinner').hide();

                $('#edit-project-modal').modal('show');
            });

            $('.delete-item-link').click(function () {
                $('.delete-confirm').show();
            });

            $('.delete-reject-button').click(function() {
                $('.delete-confirm').hide();
            });

            $('#edit-project-modal .delete-confirm-link').click(function () {
                var spinner = $('#edit-project-modal .wait-spinner');
                spinner.show();
                var projectId = $('#edit-project-id').val();
                $.post(urls.deleteProject, { projectId: projectId })
                    .always(function() {
                        $('#edit-project-modal').modal('hide');
                        spinner.hide();
                    })
                    .success(function() {
                        location.reload();
                    })
                    .fail(handleError);
            });

            $('#save-edit-project').click(function() {
                var projectId = $('#edit-project-id').val();
                var name = $('#edit-project-name-input').val();
                var spinner = $('#edit-project-modal .wait-spinner');
                spinner.show();
                $.post(urls.updateProject, { projectId: projectId, name: name })
                    .always(function() {
                        $('#edit-project-modal').modal('hide');
                        spinner.hide();
                    })
                    .success(function() {
                        location.reload();
                    })
                    .fail(handleError);
            });

            //Add group
            $('.add-group-button').click(function() {
                var projectId = $(this).attr('data-projectId');
                var projectPanel = $('.admin-project-panel[data-projectId="' + projectId + '"]');
                var projectName = projectPanel.attr('data-projectName');

                $('.project-name').text(projectName);
                $('#save-new-group').attr('data-projectid', projectId);

                $('#add-group-modal').modal('show');
            });

            $('#save-new-group').click(function() {
                var groupName = $('#group-name-input').val();
                var projectId = $(this).attr('data-projectId');
                var spinner = $('#add-group-modal .wait-spinner');
                spinner.show();
                $.post(urls.addGroup, { groupName: groupName, projectId: projectId })
                    .always(function() {
                        $('#add-group-modal').modal('hide');
                        spinner.hide();
                    })
                    .success(function() {
                        location.reload();
                    })
                    .fail(handleError);
            });

            //Edit group
            $('.btn-edit-group').click(function() {
                var groupId = $(this).data('groupid');
                var groupName = $(this).data('groupname');

                $('#edit-group-id').val(groupId);
                $('#edit-group-name-input').val(groupName);
                $('#edit-group-modal .delete-confirm').hide();
                $('#edit-group-modal .wait-spinner').hide();

                $('#edit-group-modal').modal('show');
            });

            $('#save-edit-group').click(function () {
                var groupId = $('#edit-group-id').val();
                var name = $('#edit-group-name-input').val();
                var spinner = $('#edit-group-modal .wait-spinner');
                spinner.show();
                $.post(urls.updateGroup, { groupId: groupId, name: name })
                    .always(function () {
                        $('#edit-group-modal').modal('hide');
                        spinner.hide();
                    })
                    .success(function () {
                        location.reload();
                    })
                    .fail(handleError);
            });

            $('#edit-group-modal .delete-confirm-link').click(function () {
                var spinner = $('#edit-group-modal .wait-spinner');
                spinner.show();
                var groupId = $('#edit-group-id').val();
                $.post(urls.deleteGroup, { groupId: groupId })
                    .always(function () {
                        $('#edit-group-modal').modal('hide');
                        spinner.hide();
                    })
                    .success(function () {
                        location.reload();
                    })
                    .fail(handleError);
            });
        });
    </script>
    
    <script type="text/html" id="alert-template">
        <div class="alert alert-dismissable alert-danger" data-purpose="error-alert">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <span data-purpose="error-message"></span>
        </div>
    </script>
    
    <!-- Add Project Modal -->
    <div class="modal fade" id="add-project-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Add New Project</h4>
                </div>
                <div class="modal-body">
                    <form role="form">
                        <div class="form-group">
                            <label for="project-name-input">Project Name</label>
                            <input type="text" class="form-control" id="project-name-input" placeholder="My Awesome Project"/>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <h3 class="wait-spinner" style="position: absolute; bottom: 10px; display: none"><i class="fa fa-spinner fa-spin"></i></h3>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Cancel</button>
                    <button id="save-new-project" type="button" class="btn btn-primary"><i class="fa fa-check"></i> Save</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->        

    <!-- Edit Project Modal -->
    <div class="modal fade" id="edit-project-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Edit Project</h4>
                </div>
                <div class="modal-body">
                    <form role="form">
                        <input type="hidden" id="edit-project-id"/>
                        <div class="form-group">
                            <label for="edit-project-name-input">Project Name</label>
                            <input type="text" class="form-control" id="edit-project-name-input" placeholder="My Awesome Project"/>
                        </div>
                    </form>
                    <div><a href="javascript:void(0)" class="delete-item-link"><p class="text-danger text-right">Delete Project</p></a></div>
                    <div style="display: none;" class="well delete-confirm">
                        <button class="btn btn-primary btn-block delete-reject-button">Noooooooooo.... Don't Delete</button>
                        <div style="padding-top: 10px" class="text-right">
                            <a href="javascript:void(0)" class="delete-confirm-link"><p class="text-danger">Yes, Delete Forever</p></a>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <h3 class="wait-spinner" style="position: absolute; bottom: 10px; display: none"><i class="fa fa-spinner fa-spin"></i></h3>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Cancel</button>
                    <button id="save-edit-project" type="button" class="btn btn-primary"><i class="fa fa-check"></i> Save</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->   
         
    <!-- Add Group Modal -->
    <div class="modal fade" id="add-group-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Add New Group</h4>
                    <p class="project-name">Your Project Name Here</p>
                </div>
                <div class="modal-body">
                    <form role="form">
                        <div class="form-group">
                            <label for="group-name-input">Group Name</label>
                            <input type="text" class="form-control" id="group-name-input" placeholder="My Awesome Group"/>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <h3 class="wait-spinner" style="position: absolute; bottom: 10px; display: none"><i class="fa fa-spinner fa-spin"></i></h3>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Cancel</button>
                    <button id="save-new-group" type="button" class="btn btn-primary"><i class="fa fa-check"></i> Save</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <!-- Edit Group Modal -->
    <div class="modal fade" id="edit-group-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Edit Group</h4>
                </div>
                <div class="modal-body">
                    <form role="form">
                        <input type="hidden" id="edit-group-id" />
                        <div class="form-group">
                            <label for="edit-group-name-input">Group Name</label>
                            <input type="text" class="form-control" id="edit-group-name-input" placeholder="My Awesome Group" />
                        </div>
                    </form>
                    <div><a href="javascript:void(0)" class="delete-item-link"><p class="text-danger text-right">Delete Group</p></a></div>
                    <div style="display: none;" class="well delete-confirm">
                        <button class="btn btn-primary btn-block delete-reject-button">Noooooooooo.... Don't Delete</button>
                        <div style="padding-top: 10px" class="text-right">
                            <a href="javascript:void(0)" class="delete-confirm-link"><p class="text-danger">Yes, Delete Forever</p></a>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <h3 class="wait-spinner" style="position: absolute; bottom: 10px; display: none"><i class="fa fa-spinner fa-spin"></i></h3>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Cancel</button>
                    <button id="save-edit-group" type="button" class="btn btn-primary"><i class="fa fa-check"></i> Save</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
}
<div class="row" id="alert-container">
</div>
<div class="row">
    <h2>Admin</h2>
    <p class="lead">Modify existing projects or add new lights</p>
</div>
<div class="row">
    @if (Model.NoProjects)
    {
        <h4>No Projects Added</h4>
    }
    <div class="panel-group" id="projects-panel" role="tablist" aria-multiselectable="true">
        @foreach (var project in projects)
        {
            <div class="panel panel-default admin-project-panel" data-projectId="@project.Id" data-projectName="@project.Name">
                <div class="panel-heading" role="tab" id="@project.HeaderId">
                    <div class="row">
                        <div class="col-md-6">
                            <h4>
                                <a data-toggle="collapse"
                                   data-parent="projects-panel"
                                   href="@project.PanelId.ToJqueryId()"
                                   aria-expanded="true"
                                   aria-controls="@project.PanelId"
                                   class="collapsed">
                                    <i class="fa fa-plus-circle heading-icon"></i> <span class="project-name">@project.Name</span>
                                </a>
                            </h4>
                        </div>
                        <div class="col-md-6 text-right">
                            <button class="btn btn-default btn-edit-project" data-projectId="@project.Id"><i class="fa fa-pencil"></i></button>
                        </div>
                    </div>
                </div>
                <div id="@project.PanelId" class="panel-collapse collapse" role="tabpanel" aria-labelledby="@project.HeaderId" data-panelheading="@project.HeaderId">
                    <div class="panel-body">
                        @foreach (var group in project.Groups)
                        {
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <td colspan="2" class="lead">@group.Name</td>
                                        <td class="lead text-right">
                                            <button class="btn btn-default btn-edit-group" data-groupid="@group.Id" data-groupname="@group.Name">
                                                <i class="fa fa-pencil"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Color</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var light in group.Lights)
                                    {
                                        <tr>
                                            <td class="@light.Color.DisplayClass()">@light.Color.DisplayName</td>
                                            <td><a href="javascript:void(0)">Toggle Status (@light.SwitchState.ToString())</a></td>
                                            <td><a href="javascript:void(0)">Edit</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        <div class="row text-right" style="padding-right: 15px; padding-bottom: 15px;">
                            <button class="btn btn-default add-group-button" data-projectId="@project.Id"><i class="fa fa-plus"></i> Add Group</button>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="panel-heading-unassigned">
                <div class="row">
                    <div class="col-md-12">
                        <h4>
                            <a data-toggle="collapse"
                               data-parent="projects-panel"
                               href="#collapse-unassigned"
                               aria-expanded="true"
                               aria-controls="collapse-unassigned"
                               class="collapsed">
                                <i class="fa fa-plus-circle heading-icon"></i> @unassigned.Name
                            </a>
                        </h4>
                    </div>
                </div>
            </div>
            <div id="collapse-unassigned" class="panel-collapse collapse" role="tabpanel" aria-labelledby="panel-heading-unassigned" data-panelheading="panel-heading-unassigned">
                <div class="panel-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Color</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var light in unassigned.Lights)
                            {
                                <tr class="zwaveLight" data-homeid="@light.ZWaveHomeId" data-deviceid="@light.ZWaveDeviceId">
                                    <td class="@light.Color.DisplayClass()">@light.Color.DisplayName</td>
                                    <td><a href="javascript:void(0)">Toggle Status (@light.SwitchState.ToString())</a></td>
                                    <td><a href="javascript:void(0)">Edit</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row text-right" style="padding-bottom: 15px;">
    <button class="btn btn-default" data-toggle="modal" data-target="#add-project-modal"><i class="fa fa-plus"></i> Add Project</button>
</div>